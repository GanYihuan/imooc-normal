.post-container {
	display: flex;
	flex-direction: column;
	margin-top: 20rpx;
	margin-bottom: 40rpx;
	margin-left: 0rpx;
	padding-bottom: 5px;
	border-bottom: 1px solid #ededed;
	border-top: 1px solid #ededed;
	background-color: #fff;
}

.post-author-date {
	margin-top: 10rpx;
	margin-bottom: 20rpx;
	margin-left: 10px;
}

.post-author {
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}

.post-date {
	margin-left: 20px;
	vertical-align: middle;
}

.post-image {
	margin: auto 0;
	margin-bottom: 15px;
	width: 100%;
	height: 340rpx;
}

.post-date {
  margin-bottom: 10px;
	font-size: 26rpx;
}
.post-title {
	margin-bottom: 10px;
	margin-left: 10px;
	font-size: 34rpx;
	font-weight: 600;
	color: #333;
}
.post-content {
  margin-bottom: 20rpx;
	margin-left: 20rpx;
	line-height: 40rpx;
  font-size: 28rpx;
	letter-spacing: 2rpx;
	color: #666;
}
.post-like {
	margin-left: 10px;
	line-height: 16px;
	font-size: 13px;
}

.post-like-image {
	margin-right: 8px;
	height: 16px;
	width: 16px;
	vertical-align: middle;
}

.post-like-font {
	margin-right: 20px;
	vertical-align: middle;
}
