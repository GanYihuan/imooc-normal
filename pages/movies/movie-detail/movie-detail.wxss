@import '../stars/stars-template.wxss';

.container {
	display: flex;
	flex-direction: column;
}

.head-img {
	width: 100%;
	height: 320rpx;
	/* -webkit-filter: blur(20px); */
	filter: blur(20px);
}

.head-img-hover {
	display: flex;
	flex-direction: column;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 320rpx;
}

.main-title {
	margin-top: 50rpx;
	margin-left: 40rpx;
	font-size: 19px;
	font-weight: bold;
	color: #fff;
	letter-spacing: 2px;
}

.sub-title {
	margin-left: 40rpx;
	margin-top: 30rpx;
	font-size: 28rpx;
	color: #fff;
}

.like {
	display: flex;
	flex-direction: row;
	margin-top: 30rpx;
	margin-left: 40rpx;
}

.highlight-font {
	margin-right: 10rpx;
  font-size: 22rpx;
	color: #f21146;
}

.plain-font {
	margin-right: 30rpx;
	font-size: 22rpx;
	color: #666;
}

.movie-img {
	position: absolute;
	right: 30rpx;
	top: 160rpx;
	height: 238rpx;
	width: 175rpx;
}

.summary {
	margin-left: 40rpx;
	margin-top: 40rpx;
	color: #777777;
}

.original-title {
	margin-bottom: 40rpx;
	font-size: 24rpx;
	font-weight: bold;
	color: #1f3463;
}

.flex-row {
	display: flex;
	flex-direction: row;
	margin-bottom: 10rpx;
}

.mark {
	margin-right: 30rpx;
	color: #999999;
	white-space: nowrap;
}

.hr {
	margin-top: 45rpx;
	height: 1px;
	width: 100%;
	background-color: #d9d9d9;
}

.synopsis {
	display: flex;
	flex-direction: column;
	margin-left: 40rpx;
	margin-top: 50rpx;
}

.synopsis-font {
	color: #999;
}

.summary-content {
	margin-top: 20rpx;
	margin-right: 40rpx;
	line-height: 40rpx;
	letter-spacing: 1px;
}

.cast {
	display: flex;
	flex-direction: column;
	margin-left: 40rpx;
	margin-top: 50rpx;
}

.cast-font {
  margin-bottom: 40rpx;
	color: #999;
}

.cast-container {
	display: inline-flex;
	flex-direction: column;
	margin-bottom: 50rpx;
	margin-right: 40rpx;
	width: 170rpx;
	text-align: center;
	white-space: normal;
}

.cast-imgs {
	white-space: nowrap;
}

.cast-img {
	width: 170rpx;
	height: 210rpx;
}

.cast-name {
	margin: 10rpx auto 0;
}
